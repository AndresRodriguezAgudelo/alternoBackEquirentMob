doctype html
html
  head
    title Cambio de contraseña - Equirent Mobility
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #d1d1d1;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        font-family: Arial, sans-serif;
      }
      .container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
        display: flex;
        max-width: 1000px;
        width: 100%;
        height: 550px;
        overflow: hidden;
        padding: 50px;
      }
      .left-panel {
        width: 50%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
      }
      .left-panel img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .right-panel {
        width: 50%;
        padding: 40px;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
      .logo {
        width: 60%;
        margin-bottom: 30px;
      }
      h2 {
        font-size: 22px;
        font-weight: bold;
        margin-bottom: 25px;
        text-align: center;
        width: 100%;
      }
      .form-container {
        width: 100%;
        max-width: 320px;
        text-align: left;
      }
      .form-group {
        width: 100%;
        margin-bottom: 20px;
      }
      /* Contenedor relativo para el input y el ícono */
      .input-wrapper {
        position: relative;
      }
      .form-control {
        background-color: #f8f9fa;
        border: none;
        padding: 12px 50px 12px 12px; /* Deja espacio a la derecha */
        border-radius: 5px;
        font-size: 14px;
        width: 100%;
        height: 44px;
        line-height: 44px; /* Centra verticalmente el texto */
      }
      .form-control:focus {
        box-shadow: none;
        border: 1px solid #2ea8e0;
      }
      /* Ícono centrado en el input */
      .eye-icon {
        position: absolute;
        right: 15px;
        top: 0;
        bottom: 0;
        margin: auto 0;
        cursor: pointer;
        width: 24px;
        height: 24px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
      }
      .eye-icon svg {
        display: block;
        fill: #666;
      }
      .btn-primary {
        background-color: #2ea8e0;
        border: none;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        width: 100%;
        max-width: 320px;
        transition: background 0.3s ease-in-out;
      }
      .btn-primary:hover {
        background-color: #1c7aa7;
      }
  body
    .container
      .left-panel
        img(
          src="https://equisoftfleetdev.blob.core.windows.net/equisoft-app-bucket/km.jpeg?sp=r&st=2025-03-11T17:40:14Z&se=2025-12-12T01:40:14Z&spr=https&sv=2022-11-02&sr=b&sig=udtiZtUZjI%2FZC0P69hLiFVeSAe1pAJSd9rjqzKB%2Fqps%3D"
          alt="Velocímetro"
        )
      .right-panel
        img.logo(src="https://equisoftfleetdev.blob.core.windows.net/equisoft-app-bucket/Logo%20Editable%20Equirent.png?sp=r&st=2025-03-11T18:03:06Z&se=2025-12-12T02:03:06Z&spr=https&sv=2022-11-02&sr=b&sig=zKT0MffMn8dWM3PoeY7rAfuAoTgEXGddMl%2FysJhIKh8%3D" alt="logo")
        h2 Cambio de contraseña
        .form-container
          form(method="POST" action="https://back-app-equisoft-production.up.railway.app/api/sign/v1/user/update-reset-password")
            input(type="hidden" name="token" value=token)
            .form-group
              label.form-label Nueva contraseña
              .input-wrapper
                input.form-control(type="password" name="newPassword" id="newPassword" required)
                span.eye-icon(onclick="togglePassword('newPassword')")
                  svg(width="24" height="24" viewBox="0 0 24 24")
                    path(d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zm0 13c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z")
            .form-group
              label.form-label Confirmar contraseña
              .input-wrapper
                input.form-control(type="password" name="confirmPassword" id="confirmPassword" required)
                span.eye-icon(onclick="togglePassword('confirmPassword')")
                  svg(width="24" height="24" viewBox="0 0 24 24")
                    path(d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zm0 13c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z")
            button.btn.btn-primary(type="submit") Ingresar
    script.
      function togglePassword(id) {
        console.log('Toggle password for:', id);
        var input = document.getElementById(id);
        if (input.type === "password") {
          input.type = "text";
        } else {
          input.type = "password";
        }
      }
